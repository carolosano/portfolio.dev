
---
import GitHub from "./icons/Github.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Html from "./icons/Html.astro"
import JavaScript from "./icons/JavaScript.astro"
import MongoDB from "./icons/MongoDB.astro"
import Vite from "./icons/Vite.astro"

const TAGS = {
    NEXT: {
      name: "Next.js",
      class: "bg-black text-white",
      icon: NextJS,
    },
    TAILWIND: {
      name: "Tailwind",
      class: "bg-[#003159] text-white",
      icon: Tailwind,
    },
    HTML: {
      name: "",
      class: "bg-[#FF5627] text-white",
      icon: Html,
    },
    JAVASCRIPT: {
      name: "JavaSript",
      class: "bg-[#FFC400] text-white",
      icon: JavaScript,
    },
    MONGODB: {
      name: "MongoDB",
      class: "bg-[#023430] text-white",
      icon: MongoDB,
    },
    VITE: {
      name: "Vite",
      class: "bg-[#902DF0] text-white",
      icon: Vite,
    },
  }
  const PROJECTS = [
    {
      title: "Fullstack Web prototype Project",
      description:
        "Website created with HTML, CSS, and JavaScript. Connected to a database. It is a practice prototype to learn more about front-end and back-end development.",
      link: "https://proyecto-front-qdvr3mybm-carolosano.vercel.app/",
      github: "https://github.com/carolosano/proyecto-front.git",
      image: "https://cdn.newsroom.gg//medium/000/010/039/projecto-02-.webp",
      tags: [TAGS.NEXT, TAGS.JAVASCRIPT, TAGS.MONGODB, TAGS.VITE],
    },
    
  ]

---

<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
    <div class="w-full md:w-1/2">
      <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 shadow-xl overflow-clip rounded-xl sm:rounded-xl ">
        <img alt="" class="" loading="lazy" src={image} />
      </div>
    </div>
  
    <div class="w-full md:w-1/2 md:max-w-lg">
      <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
        {title}
      </h3>
      <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
  
        <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
                
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
      </div>
    </div>
  </article>
      ))
    }
  </div>